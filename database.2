-- INNER JOIN
SELECT Treatments.TreatmentName, Treatments.Duration, Treatments.Cost,
       HospitalDepartments.DeptName, HospitalDepartments.Specialization
FROM Treatments
INNER JOIN HospitalDepartments ON Treatments.DeptID = HospitalDepartments.DeptID;

-- LEFT JOIN
SELECT Treatments.TreatmentName, Treatments.Duration, HospitalDepartments.DeptName
FROM Treatments
LEFT JOIN HospitalDepartments ON Treatments.DeptID = HospitalDepartments.DeptID;

-- RIGHT JOIN
SELECT HospitalDepartments.DeptName, HospitalDepartments.Specialization, Treatments.TreatmentName
FROM Treatments
RIGHT JOIN HospitalDepartments ON Treatments.DeptID = HospitalDepartments.DeptID;
