CREATE TABLE RestaurantBrands (
    BrandID INT PRIMARY KEY,
    BrandName VARCHAR(100),
    OriginCountry VARCHAR(50)
);

CREATE TABLE MenuItems (
    ItemID INT PRIMARY KEY,
    ItemName VARCHAR(50),
    Category VARCHAR(20),
    Price DECIMAL(10,2),
    BrandID INT,
    FOREIGN KEY (BrandID) REFERENCES RestaurantBrands(BrandID)
);

