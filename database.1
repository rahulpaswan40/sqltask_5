-- INNER JOIN
SELECT MenuItems.ItemName, MenuItems.Category, MenuItems.Price,
       RestaurantBrands.BrandName, RestaurantBrands.OriginCountry
FROM MenuItems
INNER JOIN RestaurantBrands ON MenuItems.BrandID = RestaurantBrands.BrandID;

-- LEFT JOIN
SELECT MenuItems.ItemName, MenuItems.Category, RestaurantBrands.BrandName
FROM MenuItems
